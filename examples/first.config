server {
	server_name 			localhost;
	listen					8080;
	error_page 404			./www/pages/404.html;
	error_page 403			./www/pages/403.html;

	location / {
		root 						./www;
		limit_except 				GET;
		index						index.html;
		autoindex					on;
	}

}

server {
	server_name 			localhost;
	listen					9090;
	error_page 404			./www_2/pages/404.html;

	location /pages/ {
        		root 						./www_2;
        		limit_except 				GET;
        		index						index_2.html;
        		autoindex					on;
        	}

	location / {
		root 						./www_2;
		limit_except 				GET;
		index						index.html;
		autoindex					on;
	}
}