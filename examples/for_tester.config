server {
	listen					8081;

	location / {
		root 						./www/;
		limit_except 				GET;
		index						index_empty.html;
		autoindex					off;
		redirect 301  https://developer.mozilla.org/ru/docs/Web/HTTP/Status/301;
	}

	location /put_test/ {
    		root 						./www/;
    		upload_folder				upload/;
    		limit_except 				PUT POST;
    		limit_body_size				10000000000;
    		index						index.html;
    		autoindex					off;
            cgi                         bla     /Users/scopycat/Documents/webserv/repo/cgi_tester;
    	}

    location /post_body/ {
    		root 						./www/;
    		limit_body_size				100;
    		limit_except 				POST;
    		cgi                         bla    /Users/scopycat/Documents/webserv/repo/cgi_tester;
    	}

	location /directory/ {
        	root 						./www/YoupiBanane/;
        	limit_except 				GET POST;
        	limit_body_size				10000000000;
			index						youpi.bad_extension;
			cgi                         bla     /Users/scopycat/Documents/webserv/repo/cgi_tester;
      	}

	location /delete_test/ {
			root 						./www/upload/;
			limit_except 				DELETE;
			index						index.html;
			autoindex					off;
		}

}