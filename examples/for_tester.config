server {
	listen					127.0.0.1:8081;
	error_page 404			./www/pages/404.html;
	error_page 403			./www/pages/403.html;

	location / {
		root 						./www/;
		limit_except 				GET;
		index						index.html;
		autoindex					off;
	}

	location /put_test/ {
    		root 						./www/;
    		limit_except 				PUT POST;
    		index						index.html;
    		autoindex					off;
    		cgi                         bla ./cgi_tester;
    	}

    location /post_body/ {
    		root 						./www/;
    		limit_body_size				100;
    		limit_except 				POST;
    		cgi                         bla ./cgi_tester;
    	}

	location /directory/ {
        	root 						./www/YoupiBanane/;
        	limit_except 				GET POST;
			index						youpi.bad_extension;
			cgi                         bla ./cgi_tester;
			limit_body_size				100000000;
        	}


}