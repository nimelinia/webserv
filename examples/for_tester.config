	listen					8081;
	error_page 404			./www/pages/403.html;
	error_page 403			./www/pages/404.html;
	server_name				test;

	location / {
		root 						./www_2/;
		limit_except 				GET;
		index						index.html;
		autoindex					off;
	}
}